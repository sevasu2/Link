<% @page_title = @member ? @member.name + "さんのポートフォリオ" : "会員のポートフォリオ記事" %>
<h1 class="entry-title"><%= @page_title %></h1>

<% if current_member %>
  <ul class="toolbar">
    <%= menu_link_to "ポートフォリオ記事の作成", :new_entry %>
    <%= menu_link_to "いいねしたポートフォリオ", :voted_entries %>
  </ul>
<% end %>

<% if @entries.present? %>
  <% @entries.each do |entry| %>
    <div class="entry-box">
      <h2><%= entry.title %></h2>
      <p><%= truncate(entry.body, length: 140) %>
      <%= link_to "もっと見る", entry %></p>
      <%= render "footer", entry: entry %>
    </div>

  <% end %>
  <%= paginate @entries %>
<% else %>
  <p>ポートフォリオ記事がありません。</p>
<% end %>
