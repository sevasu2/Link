<% @page_title = "会員一覧" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_members, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q], placeholder: '会員名orスクール名' %>
  <%= submit_tag "検索" %>
<% end %>

<% if @members.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>会員名</th>
        <th>スクール名</th>
        <th>ポートフォリオURL</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= link_to member.name, member %></td>
          <td><%= member.school %></td>
          <td><%= auto_link member.portfolio %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @members %>
<% else %>
  <p>会員情報がありません。</p>
<% end %>
