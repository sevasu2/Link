<% @page_title = "ユーザー一覧" %>
<h1><%= @page_title %></h1>

<%= form_tag(members_path, :method => 'get' ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag '検索', :name => nil %>
<% end %>

<% if @members.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>住んでいる所</th>
        <th>誕生日</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= link_to member.name, member %></td>
          <td><%= member.address %></td>
          <td><%= member.birthday %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @members %>
<% else %>
  <p>会員情報がありません。</p>
<% end %>
